        <thead>
            <tr>
                <th class="col-3"><%=t(".code")%></th>
                <th class="col-3"><%=t(".name")%></th>
                <th class="col-3"><%=t(".comment")%></th>
                <th class="col-1"><%=t(".progress")%></th>
                <th class="col-1"><%=t(".price")%></th>
            </tr>
        </thead>
