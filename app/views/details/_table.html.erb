                    <td class="col-3"><%= detail.part_code %></td>
                    <td class="col-3"><%= detail.part_name %></td>
                    <td class="col-3"><%= detail.comment %></td>
                    <td class="col-1"><%== detail.kiekis%></td>
                    <td class="col-1"><%= number_to_currency(detail.price_with_tax, unit: "â‚¬", format: "%n %u")  %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <%= render "layouts/pagination", pagy: pagy %>
</div>