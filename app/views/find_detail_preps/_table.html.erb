<table class="table table-hover">
    <thead>
        <tr>
            <th><%=t(".brand")%></th> 
            <th><%=t(".delivery")%></th>
            <th><%=t(".code")%></th>
            <th><%=t(".name")%></th>
            <th><%=t(".comment")%></th>
            <th><%=t(".price")%></th>
            <th><%=t(".quantity")%></th>
            <th><%= button_to t(".add_all"), root_path, class: "btn btn-success" %></th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        <% find_details.each do |detail| %>
            <tr>
                <td><%= detail.car_name %></td>
                <td><%= detail.delivery_days %></td>
                <td><%= detail.code %></td>
                <td>-</td>
                <td>-</td>
                <td><%= detail.price %></td>
                <td><%= detail.quantity %></td>
                <td><%= button_to t(".add"), detail_preps_path(id: detail.id), class: "btn btn-success" %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<%= render "layouts/pagination", pagy: pagy %>
