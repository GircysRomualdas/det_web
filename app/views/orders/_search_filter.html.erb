
<%= search_form_for(q, url: path, method: :get) do |f| %>
    <div class="border rounded p-1 bg-body-tertiary">
        <div class="input-group mb-3">
            <%= f.search_field :sid_or_vehicle_brand_or_vehicle_model_or_vin_or_status_or_codelist_cont, class: "form-control", style: "height: 30px;"%>
            <%= f.submit "Search", type: :image, src: image_path("loupe-modified.png"), class: "custom-search-loupe btn btn-primary p-1", style: "height: 30px;" %>
        </div>
        <div>
            <% if Order.select(:vehicle_brand).distinct.present? %>
                <h6><%= t(".brand") %></h6>
                <%= f.collection_check_boxes(:vehicle_brand_in, Order.select(:vehicle_brand).distinct, :vehicle_brand, :vehicle_brand, {}, onchange: 'this.form.requestSubmit();') do |checkbox| %>
                    <div class="field form-group form-check">
                        <%= checkbox.check_box class: "form-check-input" %>
                        <%= checkbox.label class: "form-check-label" %>
                    </div>
                <% end %>
            <% end %>
        </div>
        <hr>
        <div>
            <% if Order.select(:status).distinct.present? %>
                <h6><%= t(".status") %></h6>
                <%= f.collection_check_boxes(:status_in, Order.select(:status).distinct, :status, :status, {}, onchange: 'this.form.requestSubmit();') do |checkbox| %>
                    <div class="field form-group form-check">
                        <%= checkbox.check_box class: "form-check-input" %>
                        <%= checkbox.label class: "form-check-label" %>
                    </div>
                <% end %>
            <% end %>
        </div>
    </div>
    
<% end %>