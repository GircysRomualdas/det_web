<div>
    <%= render "order", order: @order %>
    <div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>code</th>
                    <th>name</th>
                    <th>comment</th>
                    <th>kiekis</th>
                    <th>price</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                <% @details.each do |detail| %>
                    <tr>
                        <td><%= detail.part_code %></td>
                        <td><%= detail.part_name %></td>
                        <td><%= detail.comment %></td>
                        <td><%== detail.kiekis%></td>
                        <td><%= detail.price_with_tax  %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <%= render partial: "layouts/pagination"%>
    </div>
</div>
