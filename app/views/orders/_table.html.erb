<table class="table table-hover">
    <thead>
        <tr>
            <th><%=t(".id")%></th>
            <th><%=t(".brand")%></th>
            <th><%=t(".model")%></th>
            <th><%=t(".vin")%></th>
            <th><%=t(".changes")%></th>
            <th><%=t(".progress")%></th>
            <th><%=t(".status")%></th>
            <th><%=t(".price")%></th>
            <th><%=t(".ordered")%></th>
            <th><%=t(".cancelled")%></th>
            <th><%= t(".created") %></th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        <% orders.each do |order| %>
            <tr>
                <td><%= link_to order.sid, order_path(order.id) %></td>
                <td><%= order.vehicle_brand %></td>
                <td><%= order.vehicle_model %></td>
                <td><%= order.vin %></td>
                <td><%== order.icon %></td>
                <td><%== order.color %></td>
                <td><%= order.status %></td>
                <td><%= order.sum_price_wo_tax_all %></td>
                <td><%= order.count_ordered_parts %></td>
                <td><%= order.count_canceled_parts %></td>
                <td><%= order.creation_date.strftime("%Y-%m-%d") %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<%= render "layouts/pagination", pagy: pagy %>