
<%= search_form_for(q, url: path, method: :get) do |f| %>
    <div class="input-group mb-3">
        <%= f.search_field :car_name_or_delivery_days_or_code_or_name_or_comment_or_quantity_cont, class: "form-control" %>
        <%= f.submit class: "btn btn-primary" %>
    </div>
    <div>
        <h5><%= t(".brand") %></h5>
        <%= f.collection_check_boxes(:car_name_in, DetailPrep.select(:car_name).distinct, :car_name, :car_name, {}, onchange: 'this.form.requestSubmit();') do |checkbox| %>
            <div class="field form-group form-check">
                <%= checkbox.check_box class: "form-check-input" %>
                <%= checkbox.label class: "form-check-label" %>
            </div>
        <% end %>
    </div>
<% end %>
